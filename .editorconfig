# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[.gitattributes]
charset = utf-8
insert_final_newline = false

[*.{cs,sln,csproj,vbproj,vcxproj,vcproj,dbproj,fsproj,lsproj,wixproj,modelproj,sqlproj,wmaproj,xproj,props,filters,vcxitems}]
end_of_line = crlf
indent_size = 4

[web.config]
end_of_line = crlf
indent_size = 4

[*.{js,ts,jsx,tsx}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sass,scss}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{package,bower}.json]
indent_size = 4
indent_style = space

[{*.yml,.nvmrc,.node-version,browserslist}]
end_of_line = lf
indent_style = space
insert_final_newline = false